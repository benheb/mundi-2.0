<div id="mundi-container" class="{{quickTheme}}">
  <div class="mundi-toolbar">
    <div id="mundi-toolbar-top">
      <div class="col-md-2">
        <span class="mundi-step-title active">Selected Attribute</span>
      </div>
      <div class="col-md-2">
        <span class="mundi-step-title {{transformActive}}" {{action "showTransformUI"}}>Transform</span>
        <span class="divider"> | </span>
        <span class="mundi-step-title {{filterActive}}" {{action "showFilterUI"}}>Filter</span>
      </div>
      <div class="col-md-2">
        <span class="mundi-step-title active">Draw</span>
      </div>
      <div class="col-md-2">
        <span class="mundi-step-title active">Quick Style</span>
      </div>
      <div class="col-md-2">
        <span class="mundi-step-title">Save</span>
        <span class="divider"> | </span>
        <span class="mundi-step-title active">Share</span>
      </div>
    </div>
    <div id="mundi-toolbar-bottom">
      <div class="col-md-2">
        {{#x-select value="yes" action="setSelectedAttribute"}}
          {{#each model.fields as |field|}}
            {{#if field.statistics.min}}
              {{#x-option value=field.alias}}{{field.alias}}{{/x-option}}
            {{/if}}
          {{/each}}
        {{/x-select}}
      </div>
      <div class="col-md-2">
        {{#if isFilter}}
          {{od-range-slider model=model selectedAttribute=selectedAttribute filterMin=filterMin filterMax=filterMax rangeOver="rangeOver" rangeOut="rangeOut"}}
          {{od-attr-chart id="od-attr-chart" selectedAttributeName=selectedAttributeName class=showChart}}
        {{else}}
          {{od-transform action="buffer"}}
        {{/if}}
      </div>
      <div class="col-md-2">
        {{od-draw-options action="changeDrawMode" drawMode=drawMode}}
      </div>
      <div class="col-md-2">
        {{od-quick-styles action="quickThemeChanged" quickTheme=quickTheme}}
      </div>
      <div class="col-md-2">
        <div class="mundi-share-icon"><img src="images/pdf.png" /></div>
        <div class="mundi-share-icon"><img src="images/ppt.png" /></div>
        <div class="mundi-share-icon"><img src="images/favorite.png" /></div>
        <div class="mundi-share-icon"><img src="images/myOrg.png" /></div>
        <div class="mundi-share-icon"><img src="images/gplus.png" /></div>
        <div class="mundi-share-icon"><img src="images/wordPress.png" /></div>
      </div>
    </div>
  </div>

  {{od-legend-container legendLayers=legendLayers}}
  
  {{od-mundi model=model store=store addLegendLayer="addLegendLayer" updateLegendLayer="updateLegendLayer" quickTheme=quickTheme drawMode=drawMode selectedAttribute=selectedAttribute selectedAttributeName=selectedAttributeName filterMin=filterMin filterMax=filterMax fields=fields buffer=buffer}}

</div>
